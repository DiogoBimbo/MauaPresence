<h2>Cadastro de professores</h2>
<hr />
<a href="/admin/professores/cadastrar"><button
    type="button"
    class="btn btn-success"
  >Adicionar professor</button></a>

{{#each professores}}
    <div class="card my-3">
        <div class="card-body">
            <h5>{{nome_completo}} / RA: {{ra}}</h5>
            <hr />
            <p>Email: {{email}}</p>
            <a href="/admin/professores/editar/{{_id}}"><button class="btn btn-success">Editar Professor</button></a>
        </div>
    </div>
{{else}}
    <div class="card my-3">
        <div class="card-body">       
            <p class="card-title text-center">Nenhum Professor registrado</p>
        </div>
    </div>
{{/each}}