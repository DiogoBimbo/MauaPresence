<h2>Cadastro de aulas</h2>
<hr />
<a href="/admin/aulas/cadastrar"><button
    type="button"
    class="btn btn-success"
  >Adicionar aula</button></a>

{{#each aulas}}
    <div class="card my-3">
        <div class="card-body">
            <h5>{{id_materia.nome_materia}} / {{tipo_aula}}</h5>
            <hr />
            {{#if grupo}}
                <p>Grupo: {{grupo}} /
            {{/if}}
            {{#if turma}}
                Turma: {{turma}} /
            {{/if}}
            {{#if lab}}
                Laboratório: {{lab}}</p>
            {{/if}}
            <p>{{dia_semana}} / Sala: {{sala}}</p>
            <p>Horário: {{horario_inicio}} - {{horario_fim}}</p>
            <p>Professor: {{id_professor.nome_completo}}</p>
             <a href="/admin/aulas/editar/{{_id}}"><button class="btn btn-success">Editar Aula</button></a>
        </div>
    </div>
{{else}}
 <div class="card my-3">
        <div class="card-body">       
          <p class="card-title text-center">Nenhuma Aula registrada</p>
        </div>
    </div>
{{/each}}