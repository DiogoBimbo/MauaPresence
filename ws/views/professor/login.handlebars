<h3>Login Professor:</h3>
<div class="card">
  <div class="card-body">
    <form id="loginForm">
      <label for="email" class="mt-2">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Email do professor"
        class="form-control"
      />

      <label for="senha" class="mt-2">Senha:</label>
      <input
        type="password"
        id="senha"
        name="senha"
        placeholder="Senha do professor"
        class="form-control"
      />

      <button type="submit" class="btn btn-success mt-3">Realizar login</button>
    </form>
  </div>
</div>

<script>
  document.getElementById("loginForm").addEventListener("submit", function(event) {
    event.preventDefault();

    const email = document.getElementById("email").value;
    const senha = document.getElementById("senha").value;

    // Realizar a requisição de login com os dados fornecidos
    fetch("/professor/login", {
      method: "POST",
      headers: {
        "Content-Type": "application/json"
      },
      body: JSON.stringify({ email, senha })
    })
    .then(response => response.json())
    .then(data => {
      // Verificar a resposta do servidor
      if (data.success) {
        // Redirecionar para a página de dashboard
        window.location.href = "/professor/dashboard";
      } else {
        // Exibir mensagem de erro de login
        alert("Login inválido. Verifique suas credenciais.");
      }
    })
    .catch(error => {
      console.error("Erro ao realizar login:", error);
      // Exibir mensagem de erro genérico
      alert("Ocorreu um erro ao realizar o login. Tente novamente mais tarde.");
    });
  });
</script>
